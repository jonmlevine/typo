<%= form_tag(form_action, :id => "merge_form", :class => 'merge') do %>
  <h3><%= _("Merge Articles") %></h3>

  <div class='merge'>
    <label for="merge_article"><%= _("Article ID")%></label>
    <div class='input' name='merge_with'>
      <%= text_field 'merge', 'with' %>
    </div>
    <%= submit_tag(_("Merge"), {:class => 'btn'}) %>
  </div>
<% end %>  
